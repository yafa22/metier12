{% extends 'base.html.twig' %}
{% block style %}
       <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">    
	<!-- Site CSS -->
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">    
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
	 <link rel="stylesheet" href="{{ asset('css/formulaire2.css') }}">
{% endblock %}
{% block body %}
<body >
    <div style="height:100px;" > </div>
        <section class="center-form" >
            <div class="container form-container">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="text-center mb-4">{{ salle.nom }} <small> {{ salle.prix ~"DT/mois"}} </h1>
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                       
                      
                     
<h3> Date Debut </h3>
<div class="form-row">
    <div class="form-group col">
        {{ form_label(form.date_debut.day, 'Day') }}
        {{ form_widget(form.date_debut.day, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_debut.day) }}
    </div>
    
    <div class="form-group col">
        {{ form_label(form.date_debut.month, 'Month') }}
        {{ form_widget(form.date_debut.month, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_debut.month) }}
    </div>

    <div class="form-group col">
        {{ form_label(form.date_debut.year, 'Year') }}
        {{ form_widget(form.date_debut.year, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_debut.year) }}
    </div>
</div>
<h3> Date Fin </h3>
<div class="form-row">
    <div class="form-group col">
        {{ form_label(form.date_fin.day, 'Day') }}
        {{ form_widget(form.date_fin.day, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_fin.day) }}
    </div>
    
    <div class="form-group col">
        {{ form_label(form.date_fin.month, 'Month') }}
        {{ form_widget(form.date_fin.month, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_fin.month) }}
    </div>

    <div class="form-group col">
        {{ form_label(form.date_fin.year, 'Year') }}
        {{ form_widget(form.date_fin.year, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_fin.year) }}
    </div>
</div>



                        <button class="btn btn-primary btn-block mt-4">{{ button_label|default('Valider') }}</button>
                        <a href="{{ path('app_abonnement_index2') }}" class="btn btn-back">Retour</a>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
		</body>
        {% endblock %}
	