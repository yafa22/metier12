<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!-- Barre de navigation -->
    <div class="navbar">
        <div class="logo">Balance Hub</div>
        <div class="menu">
            <a href="#">Accueil</a>
            <a href="#">Ã€ propos</a>
            <a href="#">Contact</a>
        </div>
    </div>

    <!-- Formulaire de connexion -->
    <div class="container">
        {{ form_start(form) }}
        <div class="box">
            <label for="email" class="fl fontLabel">Email:</label>
            <div class="new iconBox">
                <i class="fa fa-envelope" aria-hidden="true"></i>
            </div>
            <div class="fr">
                {{ form_widget(form.email, {'attr': {'class': 'textBox', 'placeholder': 'Email', 'required': 'required'}}) }}
            </div>
            <div class="clr"></div>
        </div>
        <div class="box">
            <label for="password" class="fl fontLabel">Mot de passe:</label>
            <div class="fl iconBox">
                <i class="fa fa-lock" aria-hidden="true"></i>
            </div>
            <div class="fr">
                {{ form_widget(form.password, {'attr': {'class': 'textBox', 'placeholder': 'Mot de passe', 'required': 'required'}}) }}
            </div>
            <div class="clr"></div>
        </div>
        <div class="box" style="background: #2d3e3f">
            <input type="submit" name="login" class="submit" value="Se connecter">
        </div>
        {{ form_end(form) }}
    </div>
</body>
</html>